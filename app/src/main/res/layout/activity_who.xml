<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context=".WhoActivity">

    <TextView
        android:id="@+id/page_where"
        style="@style/showtext4"
        android:text="몇 명에서 여행을 떠나시나요?" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical|center_horizontal">

        <Button
            android:id="@+id/button_decrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="25dp"
            android:text="-" />

        <TextView
            android:id="@+id/textView_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textSize="25dp"
            android:text="0" />

        <Button
            android:id="@+id/button_increase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="+" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView_person"
        android:layout_width="423dp"
        android:layout_height="319dp"
        android:layout_below="@id/button_increase"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_margin="30dp"
        android:src="@drawable/person1" />

    <Button
        android:id="@+id/button_who"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="20dp"
        android:text="여행자 정보 입력 및 확인하기"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button_next"
        style="@style/button3"
        android:text="Next Step" />

</LinearLayout>