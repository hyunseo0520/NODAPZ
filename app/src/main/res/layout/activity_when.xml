<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="100dp"
    android:orientation="vertical">



    <TextView
        android:id="@+id/page_when"
        style="@style/showtext4"
        android:text="여행 기간을 입력하여 주세요!" />

    <TextView
        android:id="@+id/page_when2"
        style="@style/showtext6"
        android:text="* 한국 시간 기준" />


    <!-- 여행 기간 입력 -->
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <RadioButton
            android:id="@+id/rdoStartCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:textSize="40dp"
            android:fontFamily="@font/kangwon"
            android:text="🛫️ 출발 날짜" />

        <RadioButton
            android:id="@+id/rdoEndCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:textSize="40dp"
            android:fontFamily="@font/kangwon"
            android:text="🛬 도착 날짜" />

    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:gravity="center_horizontal|center_vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical">

            <DatePicker
                android:id="@+id/datePicker1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:layout_gravity="center"
                android:datePickerMode="calendar"
                android:gravity="center" />

            <DatePicker
                android:id="@+id/datePicker2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/black"
                android:calendarTextColor="@color/black"
                android:datePickerMode="calendar"
                android:gravity="center" />
        </FrameLayout>
    </LinearLayout>

    <Button
        android:id="@+id/BtnDayOk"
        style="@style/button2"
        android:text="☁️ 일정 입력하기" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:background="#F0F8FF"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tvYear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kangwon"
            android:text="0000"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kangwon"
            android:text="년  "
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tvMonth1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kangwon"
            android:text="00"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kangwon"
            android:text="월  "
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tvDay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kangwon"
            android:text="00"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kangwon"
            android:text="일  "
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kangwon"
            android:text="~  "
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tvYear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kangwon"
            android:text="0000"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kangwon"
            android:text="년  "
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tvMonth2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kangwon"
            android:text="00"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kangwon"
            android:text="월  "
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tvDay2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kangwon"
            android:text="00"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kangwon"
            android:text="일  "
            android:textColor="@color/black"
            android:textSize="30dp" />

    </LinearLayout>

    <Button
        android:id="@+id/button_when"
        style="@style/button3"
        android:text="Next Step" />


</LinearLayout>