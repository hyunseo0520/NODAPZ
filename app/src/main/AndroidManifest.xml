        android:theme="@style/Theme.Trip_Project"
        tools:targetApi="31">

        <activity
            android:name=".LogInActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".SignUpActivity"></activity>
        <activity android:name=".ChecklistActivity"/>
        <activity android:name=".WhereActivity"/>
        <activity android:name=".WhenActivity"/>
        <activity android:name=".WhoActivity"/>
        <activity android:name=".ConfirmActivity"/>
        <activity android:name=".InputActivity"/>
        <activity android:name=".EditActivity"/>
